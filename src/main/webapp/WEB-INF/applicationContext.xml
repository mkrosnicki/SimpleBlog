    <!--    WYKRYWANIE BEANOW W TYM PAKIECIE-->
    <context:component-scan base-package="maku.mvc" /> 
    <!--    POZWALA KORZYSTAĆ Z ADNOTACJI W KLASACH SKONFIGUROWANYCH RĘCZNIE W TYM PLIKU-->
    <context:annotation-config />
    <!--    POZWALA NA AUTOMATYCZNĄ OBSŁUGĘ ADNOTACJI SŁUŻĄCYCH DO WALIDACJI PÓL-->
    <mvc:annotation-driven />
    <!--    POZWALA DODAWAĆ CSS I JS DO JSP-->
    <mvc:resources mapping="/resources/**" location="/resources/"  
	cache-period="31556926"/>
    <!--    POZWALA NA ADNOTACJE SECURE-->
    <sec:global-method-security secured-annotations="enabled" pre-post-annotations="enabled" />
    
    
